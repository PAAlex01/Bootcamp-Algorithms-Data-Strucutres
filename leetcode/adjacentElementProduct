function adjacentElementsProduct(inputArray) {
        
        var maxPair = inputArray[0]*inputArray[1]; // take first and second element's pair product
        for(i=0;i<inputArray.length;i++){ // loop throught array
                if(inputArray[i]*inputArray[i+1]>maxPair){ // if there is a pair greater than initial one
                        maxPair = inputArray[i]*inputArray[i+1]; // make that pair the initial one
                }
        }
        return maxPair; // return highest product of pair
}
