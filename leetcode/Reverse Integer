/**
 * @param {number} x
 * @return {number}
 */

var reverse = function(x) {
    var rev = parseInt(x.toString().split('').reverse().join('')); // take the integer, convert it array followed by reverse of it and join the reversed array back to string followed by the parse of it 
   if(rev > 2147483648) { // if the reversed int is greater than 2^31
       return 0; 
   }else {
   return rev * Math.sign(x); // else return the reversed int with its sign value
   }
 };
