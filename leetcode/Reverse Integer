/**
 * @param {number} x
 * @return {number}
 */

var reverse = function(x) {
    var rev = parseInt(x.toString().split('').reverse().join('')); // take the integer, convert it to array,followed by the reverse of it and join back the reversed array to string,followed by the parse of the string 
   if(rev > 2147483648) { // if the reversed int is greater than 2^31
       return 0; 
   }else {
   return rev * Math.sign(x); // else return the reversed int with its sign value
   }
 };
